<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homero" >

    <ImageButton
        android:id="@+id/enviar"
        android:layout_width="78dp"
        android:layout_height="100dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="194dp"
        android:background="@drawable/enviar" 
        android:onClick="enviar"/>

    <EditText
        android:id="@+id/enviousu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enviar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="@string/usu" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/enviopass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enviousu"
        android:layout_below="@+id/enviousu"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="@string/pass"
        android:inputType="textPassword" />

</RelativeLayout>
